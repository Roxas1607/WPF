<Window x:Class="GestionEmail.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionEmail"
        mc:Ignorable="d"
        Title="GestionMail" Height="450" Width="800">

    <Grid >

        <Menu RenderTransformOrigin="0.5,0.5">
            <Menu.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0"/>
                </TransformGroup>
            </Menu.RenderTransform>
            <MenuItem Header="Email " Click="MenuItem_Click_1" />
            <MenuItem Header="To do list" Click="MenuItem_Click" />
            <MenuItem Header="MenuItem"/>

        </Menu>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>




    </Grid>
</Window>
